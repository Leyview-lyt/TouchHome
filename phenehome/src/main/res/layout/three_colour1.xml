<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/rgb"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/x80"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_rgb"
        android:orientation="vertical">

        <TextView
            android:id="@+id/red"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/x10"
            android:text="255"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/green"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/x10"
            android:text="255"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/blue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/x10"
            android:text="255"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

    </LinearLayout>


    <phonehome.leynew.com.phenehome.view.MyRelativeLayout
        android:id="@+id/color"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/x200"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/cai" />

    <ImageView
        android:id="@+id/color_img"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/x80"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />


    <SeekBar
        android:id="@+id/color_vsb"
        android:layout_width="@dimen/x200"
        android:layout_height="wrap_content"
        android:layout_below="@+id/color"
        android:layout_centerHorizontal="true"
        android:max="100"
        android:progress="100"

       />


    <!--如果不给定大小,dialog更新会卡顿-->
    <TextView
        android:id="@+id/color_txt"
        android:layout_width="@dimen/x50"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/color_vsb"
        android:layout_alignTop="@+id/color_vsb"
        android:layout_toEndOf="@+id/color_vsb"
        android:gravity="center"
        android:textSize="18sp" />


</RelativeLayout>

