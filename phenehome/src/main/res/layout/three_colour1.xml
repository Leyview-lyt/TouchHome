<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/rgb"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/relativeLayout1"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_rgb">

        <TextView
            android:id="@+id/red"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="255"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/green"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="255"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/blue"
            android:layout_width="@dimen/x30"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/green"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="255"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

    </RelativeLayout>


    <phonehome.leynew.com.phenehome.view.MyRelativeLayout
        android:id="@+id/color"
        android:layout_width="@dimen/x230"
        android:layout_height="@dimen/x230"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/cai" />


    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_above="@+id/color"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/y30"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_corner_square">

        <ImageView
            android:id="@+id/color_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <SeekBar
        android:id="@+id/color_vsb"
        android:layout_width="@dimen/x200"
        android:layout_height="wrap_content"
        android:layout_below="@+id/color"
        android:layout_centerHorizontal="true"
        android:max="100"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:progress="100"
        android:progressDrawable="@drawable/seekbar_style"
        android:thumb="@drawable/sliderbar" />


    <!--如果不给定大小,dialog更新会卡顿-->
    <TextView
        android:id="@+id/color_txt"
        android:layout_width="@dimen/x40"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/color_vsb"
        android:layout_alignTop="@+id/color_vsb"
        android:layout_toEndOf="@+id/color_vsb"
        android:gravity="center"
        android:textSize="18sp" />


</RelativeLayout>

