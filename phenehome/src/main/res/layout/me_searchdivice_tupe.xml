<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >



        <RelativeLayout

            android:layout_marginLeft="@dimen/x20"
            android:id="@+id/relativeLayout01"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/textView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="WF400A" />

            <ImageButton
                android:id="@+id/imgbtn_wf400a"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/type_a" />

            <ImageView
                android:id="@+id/wf400a_ck"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/imgbtn_wf400a"
                android:layout_alignRight="@+id/imgbtn_wf400a"
                android:background="@drawable/check_pic" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout02"
            android:layout_toRightOf="@+id/relativeLayout01"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="WF400B" />

            <ImageButton
                android:id="@+id/imgbtn_wf400b"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/type_b" />

            <ImageView
                android:id="@+id/wf400b_ck"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/imgbtn_wf400b"
                android:layout_alignRight="@+id/imgbtn_wf400b"
                android:visibility="gone"
                android:background="@drawable/check_pic" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/relativeLayout02"
            android:layout_marginRight="@dimen/x20"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="WF400C" />

            <ImageButton
                android:id="@+id/imgbtn_wf400c"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/type_c" />

            <ImageView
                android:id="@+id/wf400c_ck"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/imgbtn_wf400c"
                android:layout_alignRight="@+id/imgbtn_wf400c"
                android:visibility="gone"
                android:background="@drawable/check_pic" />

        </RelativeLayout>



</LinearLayout>