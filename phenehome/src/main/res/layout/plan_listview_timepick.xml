<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include
        android:gravity="center"
        android:id="@+id/id_Area_Top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/view_top"
        android:layout_alignParentTop="true"
        />


    <TimePicker
        android:layout_marginTop="@dimen/y40"
        android:layout_gravity="center"
        android:id="@+id/timePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
         />

    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/y20"
        >


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重复："
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_below="@+id/textView1"
            android:id="@+id/edit_date_mon"
            android:layout_width="@dimen/y50"
            android:layout_height="@dimen/y50"
            android:background="@drawable/textfield_default"
            android:text="星期一"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/edit_date_tue"
            android:layout_width="@dimen/y50"
            android:layout_height="@dimen/y50"
            android:layout_alignBottom="@+id/edit_date_mon"
            android:layout_marginLeft="@dimen/x5"
            android:layout_toRightOf="@+id/edit_date_mon"
            android:background="@drawable/textfield_default"
            android:text="星期一"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/edit_date_wed"
            android:layout_width="@dimen/y50"
            android:layout_height="@dimen/y50"
            android:layout_alignBottom="@+id/edit_date_tue"
            android:layout_marginLeft="@dimen/x5"
            android:layout_toRightOf="@+id/edit_date_tue"
            android:background="@drawable/textfield_default"
            android:text="星期一"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:layout_marginLeft="@dimen/x5"
            android:id="@+id/edit_date_thu"
            android:layout_width="@dimen/y50"
            android:layout_height="@dimen/y50"
            android:layout_alignBottom="@+id/edit_date_wed"
            android:layout_toRightOf="@+id/edit_date_wed"
            android:background="@drawable/textfield_default"
            android:text="星期一"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:layout_marginTop="@dimen/x5"
            android:id="@+id/edit_date_sun"
            android:layout_width="@dimen/y50"
            android:layout_height="@dimen/y50"
            android:layout_alignBottom="@+id/edit_date_sat"
            android:layout_toLeftOf="@+id/edit_date_thu"
            android:background="@drawable/textfield_default"
            android:text="星期一"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:layout_marginTop="@dimen/x5"
            android:layout_marginLeft="@dimen/x5"
            android:id="@+id/edit_date_sat"
            android:layout_width="@dimen/y50"
            android:layout_height="@dimen/y50"
            android:layout_below="@+id/edit_date_mon"
            android:layout_toRightOf="@+id/edit_date_mon"
            android:background="@drawable/textfield_default"
            android:text="星期一"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:layout_marginTop="@dimen/x5"
            android:id="@+id/edit_date_fri"
            android:layout_width="@dimen/y50"
            android:layout_height="@dimen/y50"
            android:layout_alignLeft="@+id/edit_date_mon"
            android:layout_below="@+id/edit_date_mon"
            android:background="@drawable/textfield_default"
            android:text="星期一"
            android:textSize="14sp"
            android:textStyle="bold" />



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <Button
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginBottom="@dimen/y40"
            android:id="@+id/edit_date_cancel"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y30"
            android:background="@drawable/btn_click_bg"
            android:text="cancel"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
             />
        <Button
            android:layout_marginRight="@dimen/x40"
            android:id="@+id/edit_date_save"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y30"
            android:background="@drawable/btn_click_bg"
            android:text="save"
            android:textSize="20sp"
            android:layout_alignTop="@+id/edit_date_cancel"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</LinearLayout>
