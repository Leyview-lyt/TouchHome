<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  >
  
		<RelativeLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:padding="10dp" 
		    android:background="#ffffff">   
		 
		    <TextView
		        android:id="@+id/plan_item_txt_plan"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"
		        android:text="计划1"
		        android:textColor="@color/red"/>

		    <TextView
		        android:id="@+id/textView2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignLeft="@+id/plan_item_txt_plan"
		        android:layout_below="@+id/plan_item_txt_plan"
		        android:layout_marginTop="5dp" 
		        android:text="@string/happen_in"
		        android:textSize="18sp" />

			<LinearLayout
				android:id="@+id/plan_item_ll_day"
				android:layout_below="@+id/textView2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@+id/plan_item_txt_plan"
				android:orientation="horizontal" >
			</LinearLayout>


		    <TextView
		        android:id="@+id/textView3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignLeft="@+id/textView2"
		        android:layout_below="@+id/plan_item_ll_day"
		        android:text="@string/time"
		        android:textSize="18sp" />
		   
		    <TextView
		        android:id="@+id/plan_item_txt_time"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBaseline="@+id/textView3"
		        android:layout_alignBottom="@+id/textView3"
		        android:layout_toRightOf="@+id/textView3"
		        android:text="00 : 00"
		        android:textColor="@color/darkred"
		        android:textSize="18sp" />



		    <Button
		        android:id="@+id/plan_item_btn_on"
		        android:layout_width="70dp"
		        android:layout_height="35dp"
		        android:layout_alignBottom="@+id/plan_item_txt_time"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="18dp"
		        android:background="@drawable/plan_off" />

		    <Button
		        android:id="@+id/plan_item_btn_edit"
		        android:layout_width="58dp"
		        android:layout_height="50dp"
		        android:layout_alignLeft="@+id/plan_item_btn_on"
		        android:layout_alignTop="@+id/plan_item_txt_plan"
		        android:background="@drawable/edit_plan" />

		</RelativeLayout>
		
</LinearLayout>