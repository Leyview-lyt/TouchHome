<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y35"
        android:background="#33cccc"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/dev"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y35"
            android:layout_marginLeft="@dimen/x20"
            android:text="@string/back"
            android:textSize="15sp"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:textColor="@color/white"/>


        <TextView
            android:gravity="center"
            android:id="@+id/ctitle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y35"
            android:text="Area"
            android:textSize="25sp"
            android:background="#33cccc"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />

        <Button
            android:gravity="center"
            android:layout_marginRight="@dimen/x20"
            android:id="@+id/id_top_Menu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y35"
            android:textSize="15sp"
            android:background="#00000000"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

     <!--<FrameLayout -->
         <!--android:id="@+id/home_ll_console"-->
         <!--android:layout_width="fill_parent"-->
         <!--android:layout_height="fill_parent">-->
     <!--</FrameLayout>-->
    <FrameLayout
        android:id="@+id/scene_console"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        >
        <phonehome.leynew.com.phenehome.control.MyViewPager
            android:id="@+id/plan_home_vp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </phonehome.leynew.com.phenehome.control.MyViewPager>
        <ImageButton
            android:id="@+id/plan_vp_left"
            android:layout_gravity="left|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_l" />

        <ImageButton
            android:id="@+id/plan_vp_right"
            android:layout_gravity="right|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_r" />

    </FrameLayout>


</LinearLayout>