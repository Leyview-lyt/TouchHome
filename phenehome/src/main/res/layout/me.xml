<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/id_Area_Top"
        layout="@layout/view_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center" />

    <LinearLayout
        android:layout_marginTop="@dimen/x1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/user_banner_bg0"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/aboutus_icon"
            android:layout_width="@dimen/x65"
            android:layout_height="@dimen/y65"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/version_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/y10"
            android:text="TouchHome+"
            android:textColor="@color/black"
            android:textSize="24sp" />

    </LinearLayout>

    <View
        android:id="@+id/division1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/version_text"
        android:background="@color/custom_division_line_color" />

    <ListView
        android:headerDividersEnabled="false"
        android:divider="@color/custom_division_line_color"
        android:dividerHeight="@dimen/x1"
        android:background="@color/white"
        android:id="@+id/id_me_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        >

    </ListView>


</LinearLayout>
