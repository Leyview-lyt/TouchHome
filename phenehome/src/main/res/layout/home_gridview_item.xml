<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/griditem_fl_all"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
  
        

		<LinearLayout
		    android:id="@+id/griditem_fl_top"
            android:layout_width="fill_parent"
            android:background="@drawable/shape_top_corner_no_bottom_line"
            android:layout_height="0dp"
            android:layout_weight="3" 
            android:orientation="horizontal">
            <LinearLayout 
		        android:layout_width="0dp"
		        android:layout_weight="2"
		        android:layout_height="fill_parent"
		        android:orientation="vertical"
		        android:gravity="center_horizontal"
		        >
		        <View 
		    android:layout_width="fill_parent"
		        android:layout_weight="1"
		        android:layout_height="0dp"
		    />
		        </LinearLayout>
		    <LinearLayout 
		        android:layout_width="0dp"
		        android:layout_weight="10"
		        android:layout_height="fill_parent"
		        android:gravity="center"
		        >
            <ImageView
                android:id="@+id/griditem_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                
                />
        </LinearLayout>
        <LinearLayout 
		        android:layout_width="0dp"
		        android:layout_weight="2"
		        android:layout_height="fill_parent"
		        android:orientation="vertical"
		        android:gravity="center_horizontal"
		        >
        <ImageView
 				android:visibility="invisible"
                android:id="@+id/griditem_delete"
                android:layout_width="20dp"
                android:layout_height="20dp" 
                android:src="@drawable/del_pic" />
		<View 
		    android:layout_width="fill_parent"
		        android:layout_weight="1"
		        android:layout_height="0dp"
		    />
        <ImageView
            android:id="@+id/griditem_checked"
			android:visibility="invisible"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/checkbox_checked" />
        </LinearLayout>
        </LinearLayout>        

        <LinearLayout
            android:id="@+id/griditem_fl_bottom"
            android:layout_width="match_parent"
            android:background="@drawable/shape_bottom_corner_no_top_line"
            android:gravity="center"
            android:layout_height="0dp"
            android:layout_weight="1" >
        <TextView
            android:id="@+id/griditem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView" />
        </LinearLayout>

        
 

</LinearLayout>