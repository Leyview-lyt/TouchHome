<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<LinearLayout 
	android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="7"
    android:orientation="vertical"
    android:gravity="center|bottom" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/setting_gv_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/wf310" />      

        <ImageView
            android:id="@+id/setting_gv_img_check"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/setting_gv_img"
            android:layout_alignRight="@+id/setting_gv_img"
            android:visibility="gone"
            android:background="@drawable/check_pic" />
        </RelativeLayout>
        </LinearLayout>
        <LinearLayout 
	     android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="3"
	    android:gravity="center|top"
	    android:orientation="vertical" >
		<TextView
            android:id="@+id/setting_gv_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="WF400A"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/setting_gv_txt_sequence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView" />
    
	</LinearLayout>
</LinearLayout>