<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lv_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:lines="1"
            android:text="WF400A" />

        <TextView
            android:id="@+id/lv_item_sequence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_alignLeft="@+id/lv_item_type"
            android:layout_below="@+id/lv_item_type"
            android:layout_marginTop="5dp"
            android:text="产品序列号" />
		
        
        
        
        <ImageView
            android:visibility="gone"
            android:id="@+id/lv_item_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/check_pic" />

        <TextView
            android:visibility="gone"
            android:id="@+id/lv_item_bound"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:lines="1"
            android:layout_marginRight="60dp"
            android:textSize="14sp"
            android:text="@string/has_been_bound" />

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/lv_item_pb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/lv_item_bound"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true" />

        <Button
            android:visibility="gone"
            android:id="@+id/lv_item_prohibit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"/>

        <ImageButton
            android:id="@+id/bazhang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/lv_item_sequence"
            android:layout_alignParentRight="true"
            android:focusable="false"
            android:layout_marginRight="65dp"
            android:background="@drawable/zhangstop" />

    </RelativeLayout>

</LinearLayout>